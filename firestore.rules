rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow reads to all documents so the app can display data
    // Restrict writes so only authenticated users can create quiz attempts on their own profile
    match /users/{userId}/quizAttempts/{attemptId} {
      // Only the owner can read their own quiz attempts
      allow read: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update, delete: if false;
    }
    
    match /students/{studentId} {
      // Allow authenticated users to read other students' profiles for friend challenges
      allow read: if request.auth != null;
      // Only allow users to create/update their own profile
      allow create, update: if request.auth != null && request.auth.uid == studentId;
      allow delete: if false;
    }

    // Challenges - accessible to creator and opponents
    match /challenges/{challengeId} {
      // Allow read for authenticated users
      // Note: Users will only access challenges they're invited to via notifications
      // Firestore rules can't easily check nested array fields, so we rely on client-side validation
      allow read: if request.auth != null;
      // Allow create if user is authenticated
      allow create: if request.auth != null;
      // Allow update if user is creator OR authenticated (opponent validation happens client-side)
      // This allows opponents to accept/update their status
      allow update: if request.auth != null;
      allow delete: if false;
    }

    // Per-user notifications (challenge invites, system messages, etc.)
    match /users/{userId}/notifications/{notificationId} {
      // Only the owner can read their own notifications
      allow read: if request.auth != null && request.auth.uid == userId;
      // Allow any authenticated user to CREATE notifications (for challenge invitations)
      // But only the owner can UPDATE their notifications
      allow create: if request.auth != null;
      allow update: if request.auth != null && request.auth.uid == userId;
      // Only the owner can delete their notifications
      allow delete: if request.auth != null && request.auth.uid == userId;
    }

    // Subscriptions - users can read/write their own subscription
    // IMPORTANT: This must be before the catch-all rule below
    match /subscriptions/{userId} {
      // Allow read if user is authenticated and matches the userId
      allow read: if request.auth != null && request.auth.uid == userId;
      // Allow create/update if user is authenticated and matches the userId
      allow create, update: if request.auth != null && request.auth.uid == userId;
      // Prevent deletion
      allow delete: if false;
    }

    // Referrals - users can read their own referrals and create new ones
    match /referrals/{referralId} {
      // Allow read if user is authenticated and:
      // 1. They are the referrer (owner of the code), OR
      // 2. They are the referred user, OR
      // 3. The document is a code document (referredUid is null) - anyone can read to verify code
      allow read: if request.auth != null && (
        resource.data.referrerUid == request.auth.uid || 
        (resource.data.referredUid != null && resource.data.referredUid == request.auth.uid) ||
        resource.data.referredUid == null
      );
      // Allow create if user is authenticated (can create referrals/codes)
      allow create: if request.auth != null;
      // Allow update if user is authenticated and is the referred user (for validation) or referrer
      allow update: if request.auth != null && (
        resource.data.referredUid == request.auth.uid ||
        resource.data.referrerUid == request.auth.uid
      );
      // Prevent deletion
      allow delete: if false;
    }

    // Users collection - store referral codes
    match /users/{userId} {
      // Allow read if user is authenticated and matches the userId
      allow read: if request.auth != null && request.auth.uid == userId;
      // Allow create/update if user is authenticated and matches the userId
      allow create, update: if request.auth != null && request.auth.uid == userId;
      // Prevent deletion
      allow delete: if false;
    }

    // Admins collection - store admin user emails
    match /admins/{email} {
      // Allow any authenticated user to read admin list (to check their own access)
      allow read: if request.auth != null;
      // Only allow authenticated users to create/update admin entries
      // Authorization check happens in application code (super admin only)
      allow create, update: if request.auth != null;
      // Allow authenticated users to delete (authorization checked in app)
      allow delete: if request.auth != null;
    }

    // Allow authenticated users to seed/manage lesson content (for admin/seed operations)
    match /subjects/{subjectId}/{document=**} {
      allow read: if true;
      allow write: if request.auth != null; // Authenticated users can seed content
    }

    match /{document=**} {
      allow read: if true;
      allow write: if false; // Block all other writes for security
    }
  }
}
