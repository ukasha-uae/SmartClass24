rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // =========================================================================
    // HELPER FUNCTIONS
    // =========================================================================
    
    // Check if user belongs to a specific tenant
    function belongsToTenant(tenantId) {
      return request.auth != null &&
             ('tenantId' in request.auth.token) &&
             request.auth.token.tenantId == tenantId;
    }
    
    // Check if user is super admin (can access all tenants)
    function isSuperAdmin() {
      return request.auth != null && 
             request.auth.token.superAdmin == true;
    }
    
    // Check if user belongs to a specific curriculum (v2.0+)
    function belongsToCurriculum(curriculumId) {
      return request.auth != null && 
             request.auth.token.curriculumId == curriculumId;
    }
    
    // Get tenant's curriculum from tenants collection (v2.0+)
    function getTenantCurriculum(tenantId) {
      return get(/databases/$(database)/documents/tenants/$(tenantId)).data.curriculum;
    }
    
    // Check if user has admin role (v2.0+)
    function hasRole(role) {
      return request.auth != null && 
             request.auth.token.role == role;
    }
    
    // =========================================================================
    // SHARED COLLECTIONS WITH tenantId FIELD (v1 - Simplified)
    // =========================================================================
    
    // Students (shared collection, filtered by tenantId)
    match /students/{studentId} {
      allow read: if request.auth != null && (
        request.auth.uid == studentId ||
        belongsToTenant(resource.data.tenantId) ||
        isSuperAdmin()
      );
      allow create: if request.auth != null && 
        request.auth.uid == studentId &&
        (!('tenantId' in request.resource.data) || 
         ('tenantId' in request.auth.token) &&
         request.resource.data.tenantId == request.auth.token.tenantId);
      allow update: if request.auth != null && 
        request.auth.uid == studentId &&
        (!('tenantId' in resource.data) ||
         ('tenantId' in request.auth.token) &&
         resource.data.tenantId == request.auth.token.tenantId);
      allow delete: if false;
    }
    
    // Quiz attempts (shared collection, filtered by tenantId)
    match /users/{userId}/quizAttempts/{attemptId} {
      allow read: if request.auth != null && 
        request.auth.uid == userId &&
        belongsToTenant(resource.data.tenantId);
      allow create: if request.auth != null && 
        request.auth.uid == userId &&
        (!('tenantId' in request.resource.data) ||
         ('tenantId' in request.auth.token) &&
         request.resource.data.tenantId == request.auth.token.tenantId);
      allow update, delete: if false;
    }

    // Challenges - accessible to creator and opponents
    match /challenges/{challengeId} {
      // Helper function to check if challenge currently has a bot (from existing data)
      function hasExistingBot() {
        return resource.data.opponents != null && 
               resource.data.opponents.size() > 0 &&
               resource.data.opponents[0].userId.matches('bot-.*');
      }
      
      // Allow read for authenticated users
      allow read: if request.auth != null;
      
      // Allow create if user is authenticated
      allow create: if request.auth != null;
      
      // Allow update if user is authenticated OR challenge already has bot opponent
      allow update: if request.auth != null || hasExistingBot();
      
      allow delete: if false;
    }

    // Per-user notifications (challenge invites, system messages, etc.)
    match /users/{userId}/notifications/{notificationId} {
      // Only the owner can read their own notifications
      allow read: if request.auth != null && request.auth.uid == userId;
      // Allow any authenticated user to CREATE notifications (for challenge invitations)
      // But only the owner can UPDATE their notifications
      allow create: if request.auth != null;
      allow update: if request.auth != null && request.auth.uid == userId;
      // Only the owner can delete their notifications
      allow delete: if request.auth != null && request.auth.uid == userId;
    }

    // Subscriptions - users can read/write their own subscription
    // IMPORTANT: This must be before the catch-all rule below
    match /subscriptions/{userId} {
      // Allow read if user is authenticated and matches the userId
      allow read: if request.auth != null && request.auth.uid == userId;
      // Allow create/update if user is authenticated and matches the userId
      allow create, update: if request.auth != null && request.auth.uid == userId;
      // Prevent deletion
      allow delete: if false;
    }

    // Referrals - users can read their own referrals and create new ones
    match /referrals/{referralId} {
      // Allow read if user is authenticated and:
      // 1. They are the referrer (owner of the code), OR
      // 2. They are the referred user, OR
      // 3. The document is a code document (referredUid is null) - anyone can read to verify code
      allow read: if request.auth != null && (
        resource.data.referrerUid == request.auth.uid || 
        (resource.data.referredUid != null && resource.data.referredUid == request.auth.uid) ||
        resource.data.referredUid == null
      );
      // Allow create if user is authenticated (can create referrals/codes)
      allow create: if request.auth != null;
      // Allow update if user is authenticated and is the referred user (for validation) or referrer
      allow update: if request.auth != null && (
        resource.data.referredUid == request.auth.uid ||
        resource.data.referrerUid == request.auth.uid
      );
      // Prevent deletion
      allow delete: if false;
    }

    // Users collection - store referral codes
    match /users/{userId} {
      // Allow read if user is authenticated and matches the userId
      allow read: if request.auth != null && request.auth.uid == userId;
      // Allow create/update if user is authenticated and matches the userId
      allow create, update: if request.auth != null && request.auth.uid == userId;
      // Prevent deletion
      allow delete: if false;
    }

    // Admins collection - store admin user emails
    match /admins/{email} {
      // Allow any authenticated user to read admin list (to check their own access)
      allow read: if request.auth != null;
      // Only allow authenticated users to create/update admin entries
      // Authorization check happens in application code (super admin only)
      allow create, update: if request.auth != null;
      // Allow authenticated users to delete (authorization checked in app)
      allow delete: if request.auth != null;
    }

    // FCM Tokens - store push notification tokens for each user
    match /users/{userId}/fcmTokens/{tokenId} {
      // Only the owner can read their own FCM tokens
      allow read: if request.auth != null && request.auth.uid == userId;
      // Only the owner can create/update their FCM tokens
      allow create, update: if request.auth != null && request.auth.uid == userId;
      // Only the owner can delete their FCM tokens
      allow delete: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to seed/manage lesson content (for admin/seed operations)
    match /subjects/{subjectId}/{document=**} {
      allow read: if true;
      allow write: if request.auth != null; // Authenticated users can seed content
    }

    // S24 Innovation Academy Progress - users can read/write their own progress
    match /university-progress/{progressId} {
      // progressId format: {userId}_{programId}_{courseId}
      allow read: if request.auth != null && progressId.matches(request.auth.uid + '_.*');
      allow create, update: if request.auth != null && progressId.matches(request.auth.uid + '_.*');
      allow delete: if false;
    }

    // S24 Innovation Academy Submissions - students can read their own submissions
    match /university-submissions/{submissionId} {
      allow read: if request.auth != null && resource.data.studentId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.studentId == request.auth.uid;
      allow update: if request.auth != null && resource.data.studentId == request.auth.uid;
      allow delete: if false;
    }

    // S24 Innovation Academy Code Saves - auto-save code for students
    match /university-code-saves/{saveId} {
      // saveId format: {userId}_{lessonId}
      allow read: if request.auth != null && saveId.matches(request.auth.uid + '_.*');
      allow create, update: if request.auth != null && saveId.matches(request.auth.uid + '_.*');
      allow delete: if request.auth != null && saveId.matches(request.auth.uid + '_.*');
    }

    // =========================================================================
    // V2.0: MULTI-CURRICULUM COLLECTIONS
    // =========================================================================
    
    // Curriculum metadata and content hierarchy (v2.0+)
    match /curriculums/{curriculumId} {
      // All authenticated users can browse curriculums
      allow read: if request.auth != null;
      // Only admins can modify curriculum metadata
      allow write: if hasRole('admin') || isSuperAdmin();
      
      // Subjects within curriculum
      match /subjects/{subjectId} {
        allow read: if request.auth != null;
        allow write: if hasRole('admin') || isSuperAdmin();
        
        // Topics within subject
        match /topics/{topicId} {
          allow read: if request.auth != null;
          allow write: if hasRole('admin') || isSuperAdmin();
          
          // Lessons within topic
          match /lessons/{lessonId} {
            allow read: if request.auth != null;
            allow write: if hasRole('admin') || hasRole('content-creator') || isSuperAdmin();
          }
        }
      }
    }
    
    // Quiz questions scoped by curriculum (v2.0+)
    match /quizzes/{curriculumId}/questions/{questionId} {
      // Students can read questions IF their tenant uses this curriculum
      // For now, allow all authenticated users (will add curriculumId to auth token in Phase 2)
      allow read: if request.auth != null;
      // Only admins and content creators can write
      allow write: if hasRole('admin') || hasRole('content-creator') || isSuperAdmin();
    }
    
    // Student quiz attempts with curriculum isolation (v2.0+)
    match /students/{userId}/quizAttempts/{attemptId} {
      // Owner can read their own attempts
      allow read: if request.auth != null && request.auth.uid == userId;
      // Owner can create attempts, but MUST include curriculumId matching their tenant's curriculum
      // TODO: Uncomment when curriculumId is in auth token (Phase 2)
      // allow create: if request.auth != null && 
      //               request.auth.uid == userId &&
      //               request.resource.data.curriculumId == getTenantCurriculum(request.auth.token.tenantId);
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update, delete: if false;
    }

    // Deny all other access by default (security best practice)
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
